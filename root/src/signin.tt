[% META
   title = 'UMI Log In'
   link = '<link href="/static/css/signin.css" rel="stylesheet">'
%] 

<div class="container umi-bg">
  <form class="form-signin" role="form" method="POST" action="signin">
  [% INCLUDE ldap_err.tt %]
    <div class="form-group has-feedback">
	<img src="/static/images/umi-logo-black-diagonal.png"
	     alt="Unified Management Interface"
	     class="img-responsive mx-auto">
      <h2 class="form-signin-heading text-center text-light text-uppercase">please sign in</h2>

      <div class="input-group">
	<span class="input-group-addon" id="basic-login"><i class="fa fa-user-circle"></i></span>
	<input type="text" class="form-control" placeholder="login" aria-describedby="basic-login" name="auth_uid" required autofocus>
      </div>
      <div class="input-group">
	<span class="input-group-addon" id="basic-password"><i class="fa fa-unlock-alt"></i></span>
	<input type="password" class="form-control" placeholder="password" aria-describedby="basic-password" name="auth_pwd" required>
      </div>
      <div class="checkbox text-light">
	<label>
          <input name="auth_mem" type="checkbox" value="remember-me"> remember me
	</label>
      </div>

      <button class="btn btn-primary btn-block" type="submit">Sign in</button>
    </div>
  </form>
</div> <!-- /container -->
